			$.fancybox.showActivity();
			$.getJSON("<?php echo $this->baseUrl('votecontest') ?>/<?php echo $this->contest->contest_id ?>/" + name + "?key=<?php echo urlencode($this->key)?>",
			function(data) {
				if (data.res == true) {
					var id = "#vote_" + name;
					var vote = parseInt($(id).html());
					$(id).html(vote + 1);
					vote_point();
				}
				$.fancybox(data.message);
			});
		});
	});
</script>
